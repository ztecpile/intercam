{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "baseUrl": ".",
    "paths": {
      "@intercam/contrato": ["libs/contrato/src/index.ts"],
      "@intercam/shred-components": ["libs/shred-components/src/index.ts"],
      "@intercam/model": ["libs/model/src/index.ts"],
      "@intercam/comisiones": ["libs/comisiones/src/index.ts"],
      "@intercam/tesoreria": ["libs/tesoreria/src/index.ts"],
      "@intercam/operacion": ["libs/operacion/src/index.ts"],
      "@intercam/banco": ["libs/banco/src/index.ts"],
      "@intercam/fondos": ["libs/fondos/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
